<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fittrack.controller.FoodLogController">
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>
   
   <!-- Title -->
   <Label fx:id="welcomeLabel" text="Food Log">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   
   <!-- Daily Totals -->
   <VBox spacing="10.0" style="-fx-background-color: #4CAF50; -fx-padding: 20; -fx-background-radius: 10;">
      <Label fx:id="dailyTotalsLabel" text="Daily Totals: 0 kcal" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </VBox>
   
   <!-- Food Log Table -->
   <TableView fx:id="foodLogTable" prefHeight="200.0">
      <columns>
         <TableColumn fx:id="foodNameColumn" text="Food" prefWidth="150.0" />
         <TableColumn fx:id="caloriesColumn" text="Calories" prefWidth="80.0" />
         <TableColumn fx:id="proteinColumn" text="Protein (g)" prefWidth="90.0" />
         <TableColumn fx:id="carbsColumn" text="Carbs (g)" prefWidth="90.0" />
         <TableColumn fx:id="fatsColumn" text="Fats (g)" prefWidth="90.0" />
         <TableColumn fx:id="dateColumn" text="Date" prefWidth="100.0" />
      </columns>
   </TableView>
   
   <!-- Add Food Form -->
   <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
      <Label text="Log New Food">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <GridPane hgap="10.0" vgap="15.0">
         <columnConstraints>
            <ColumnConstraints percentWidth="50.0" />
            <ColumnConstraints percentWidth="50.0" />
         </columnConstraints>
         
         <!-- Food Name -->
         <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Food Name:" />
            <TextField fx:id="foodNameField" promptText="e.g., Chicken Breast" />
         </VBox>
         
         <!-- Calories -->
         <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Calories (kcal):" />
            <TextField fx:id="caloriesField" promptText="e.g., 250" />
         </VBox>
         
         <!-- Protein -->
         <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="Protein (g):" />
            <TextField fx:id="proteinField" promptText="e.g., 30.5" />
         </VBox>
         
         <!-- Carbs -->
         <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Carbs (g):" />
            <TextField fx:id="carbsField" promptText="e.g., 15.0" />
         </VBox>
         
         <!-- Fats -->
         <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <Label text="Fats (g):" />
            <TextField fx:id="fatsField" promptText="e.g., 5.0" />
         </VBox>
         
         <!-- Date -->
         <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Label text="Date:" />
            <DatePicker fx:id="datePicker" prefWidth="200.0" />
         </VBox>
      </GridPane>
      
      <!-- Message Label -->
      <Label fx:id="messageLabel" />
      
      <!-- Buttons Row -->
      <HBox spacing="10.0">
         <Button text="Log Food" onAction="#handleAddFoodButtonAction" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
         
         <Button text="View Date Totals" onAction="#handleViewDateButtonAction" prefWidth="140.0">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      </HBox>
   </VBox>
   
   <!-- Action Buttons -->
   <HBox spacing="10.0" alignment="CENTER">
      <Button text="Delete Selected Entry" onAction="#handleDeleteFoodButtonAction" prefWidth="180.0" style="-fx-background-color: #f44336; -fx-text-fill: white;">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      
      <Button text="Back to Dashboard" onAction="#handleBackButtonAction" prefWidth="150.0">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </HBox>
</VBox>
