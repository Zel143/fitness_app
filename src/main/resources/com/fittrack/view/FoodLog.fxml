<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fittrack.controller.FoodLogController"
            prefWidth="1200.0" prefHeight="700.0"
            stylesheets="@/com/fittrack/view/styleSheet.css"
            >

    <!-- === SIDEBAR === -->
    <left>
        <VBox prefWidth="220.0" spacing="20.0"
              alignment="TOP_LEFT"
              styleClass="sidebar">

            <Label fx:id="userLabel" text="Welcome, User!" styleClass="sidebar-user">
                <font><Font name="System Bold" size="18"/></font>
            </Label>

            <Separator style="-fx-background-color: white;"/>

            <VBox spacing="10.0" alignment="TOP_LEFT">
                <Button text="ðŸ  Dashboard" styleClass="sidebar-button" onAction="#handleDashboardButtonAction"/>
                <Button text="ðŸŽ¯ Goals" styleClass="sidebar-button" onAction="#handleGoalsButtonAction"/>
                <Button text="ðŸ“… Workouts" styleClass="sidebar-button" onAction="#handleWorkoutsButtonAction"/>
                <Button text="ðŸ“ˆ Progress" styleClass="sidebar-button" onAction="#handleProgressButtonAction"/>
                <Button text="ðŸŽ Food Log" styleClass="sidebar-button" style="-fx-background-color: #1976D2;"/>
                <Button text="ðŸ‘¤ Profile" styleClass="sidebar-button" onAction="#handleProfileButtonAction"/>
            </VBox>

            <Pane VBox.vgrow="ALWAYS"/>

            <Button text="ðŸšª Logout" styleClass="logout-button" onAction="#handleLogoutButtonAction"/>
        </VBox>
    </left>

    <!-- === MAIN CONTENT AREA === -->
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox spacing="25.0" minHeight="700.0" alignment="TOP_CENTER" style="-fx-padding: 40;" styleClass="foodlog-container">
                    
                    <!-- Page Title -->
                    <Label fx:id="welcomeLabel" text="Food Log" styleClass="foodlog-title" />

                    <!-- Centered Green Summary Card -->
                    <HBox alignment="CENTER">
                        <VBox spacing="10.0" alignment="CENTER"
                              styleClass="daily-summary-card">
                            <Label fx:id="dailyTotalsLabel"
                                   text="Daily Totals: Calories: 0 kcal | Protein: 0g | Carbs: 0g | Fats: 0g"
                                   wrapText="true"
                                   styleClass="daily-summary-text"/>
                        </VBox>
                    </HBox>

                    <!-- Food Log Table -->
                    <VBox spacing="10.0" styleClass="log-card">
                        <Label text="Food Log Entries" styleClass="section-title"/>
                        <TableView fx:id="foodLogTable" prefHeight="200.0" styleClass="food-table">
                            <columns>
                                <TableColumn fx:id="foodNameColumn" text="Food" prefWidth="180.0" />
                                <TableColumn fx:id="caloriesColumn" text="Calories" prefWidth="100.0" />
                                <TableColumn fx:id="proteinColumn" text="Protein (g)" prefWidth="100.0" />
                                <TableColumn fx:id="carbsColumn" text="Carbs (g)" prefWidth="100.0" />
                                <TableColumn fx:id="fatsColumn" text="Fats (g)" prefWidth="100.0" />
                                <TableColumn fx:id="dateColumn" text="Date" prefWidth="120.0" />
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- Log New Food Section -->
                    <VBox spacing="15.0" styleClass="log-card">
                        <Label text="Log New Food" styleClass="section-title"/>

                        <GridPane hgap="20.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50.0"/>
                                <ColumnConstraints percentWidth="50.0"/>
                            </columnConstraints>

                            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Food Name:"/>
                                <TextField fx:id="foodNameField" promptText="e.g., Chicken Breast"/>
                            </VBox>

                            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Calories (kcal):"/>
                                <TextField fx:id="caloriesField" promptText="e.g., 250"/>
                            </VBox>

                            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Protein (g):"/>
                                <TextField fx:id="proteinField" promptText="e.g., 30.5"/>
                            </VBox>

                            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label text="Carbs (g):"/>
                                <TextField fx:id="carbsField" promptText="e.g., 15.0"/>
                            </VBox>

                            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <Label text="Fats (g):"/>
                                <TextField fx:id="fatsField" promptText="e.g., 5.0"/>
                            </VBox>

                            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                <Label text="Date:"/>
                                <DatePicker fx:id="datePicker" prefWidth="200.0"/>
                            </VBox>
                        </GridPane>

                        <Label fx:id="messageLabel" styleClass="success-label"/>

                        <HBox spacing="15.0" alignment="CENTER_LEFT">
                            <Button text="Log Food" onAction="#handleAddFoodButtonAction" styleClass="log-button"/>
                            <Button text="View Date Totals" onAction="#handleViewDateButtonAction" styleClass="view-button"/>
                        </HBox>
                    </VBox>

                    <!-- Action Buttons -->
                    <HBox spacing="15.0" alignment="CENTER">
                        <Button text="Delete Selected Entry" onAction="#handleDeleteFoodButtonAction" styleClass="delete-button"/>
                        <Button text="Back to Dashboard" onAction="#handleBackButtonAction" styleClass="view-button"/>
                    </HBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
