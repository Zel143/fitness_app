<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fittrack.controller.ProgressController"
            prefWidth="1200.0" prefHeight="700.0"
            stylesheets="@/com/fittrack/view/styleSheet.css">

    <!-- === SIDEBAR === -->
    <left>
        <VBox prefWidth="220.0" spacing="20.0"
              alignment="TOP_LEFT"
              styleClass="sidebar">

            <Label fx:id="userLabel" text="Welcome, User!" styleClass="sidebar-user">
                <font><Font name="System Bold" size="18"/></font>
            </Label>
            <Separator style="-fx-background-color: white;"/>

            <VBox spacing="10.0" alignment="TOP_LEFT">
                <Button text="ðŸ  Dashboard" styleClass="sidebar-button" onAction="#handleDashboardButtonAction"/>
                <Button text="ðŸŽ¯ Goals" styleClass="sidebar-button" onAction="#handleGoalsButtonAction"/>
                <Button text="ðŸ“… Workouts" styleClass="sidebar-button" onAction="#handleWorkoutsButtonAction"/>
                <Button text="ðŸ“ˆ Progress" styleClass="sidebar-button" style="-fx-background-color: #1976D2;"/>
                <Button text="ðŸŽ Food Log" styleClass="sidebar-button" onAction="#handleFoodLogButtonAction"/>
                <Button text="ðŸ‘¤ Profile" styleClass="sidebar-button" onAction="#handleProfileButtonAction"/>
            </VBox>

            <Pane VBox.vgrow="ALWAYS"/>

            <Button text="ðŸšª Logout" styleClass="logout-button" onAction="#handleLogoutButtonAction"/>
        </VBox>
    </left>

    <!-- === MAIN CONTENT AREA === -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20.0">
                <padding>
                    <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                </padding>

                <!-- Title -->
                <Label text="Track Your Progress">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
   
                <!-- Statistics -->
                <VBox spacing="10.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Your Stats">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <Label fx:id="statsLabel" text="Loading stats..." />
                </VBox>
   
                <!-- Weight Chart -->
                <VBox spacing="10.0">
                    <Label text="Weight Progress Chart">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <LineChart fx:id="weightChart" prefHeight="250.0" maxHeight="350.0" legendVisible="true" title="Weight Over Time" animated="true" createSymbols="true">
                        <xAxis>
                            <CategoryAxis fx:id="xAxis" label="Date" side="BOTTOM"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxis" label="Weight (kg)" side="LEFT" autoRanging="true"/>
                        </yAxis>
                    </LineChart>
                </VBox>
   
                <!-- Weight History Table -->
                <VBox spacing="10.0">
                    <Label text="Weight History">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <TableView fx:id="weightHistoryTable" minHeight="150.0" prefHeight="200.0" maxHeight="300.0">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="200.0" />
                            <TableColumn fx:id="weightColumn" text="Weight (kg)" prefWidth="150.0" />
                        </columns>
                    </TableView>
                </VBox>
   
                <!-- Add Weight Form -->
                <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Record New Weight">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
      
                    <HBox spacing="20.0">
                        <!-- Weight -->
                        <VBox spacing="5.0">
                            <Label text="Weight (kg):" />
                            <TextField fx:id="weightField" promptText="e.g., 75.5" prefWidth="150.0" />
                        </VBox>
         
                        <!-- Date -->
                        <VBox spacing="5.0">
                            <Label text="Date:" />
                            <DatePicker fx:id="datePicker" prefWidth="150.0" />
                        </VBox>
                    </HBox>
      
                    <!-- Message Label -->
                    <Label fx:id="messageLabel" />
      
                    <!-- Add Weight Button -->
                    <Button text="Record Weight" onAction="#handleAddWeightButtonAction" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                </VBox>
   
                <!-- Action Buttons -->
                <HBox spacing="10.0" alignment="CENTER">
                    <Button text="Delete Selected Entry" onAction="#handleDeleteEntryButtonAction" prefWidth="180.0" style="-fx-background-color: #f44336; -fx-text-fill: white;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    
                    <Button text="Back to Dashboard" onAction="#handleBackButtonAction" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
