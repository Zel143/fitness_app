<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fittrack.controller.WorkoutPlansController"
            prefWidth="1200.0" prefHeight="700.0"
            stylesheets="@/com/fittrack/view/styleSheet.css">

    <!-- === SIDEBAR === -->
    <left>
        <VBox prefWidth="220.0" spacing="20.0"
              alignment="TOP_LEFT"
              styleClass="sidebar">

            <Label fx:id="userLabel" text="Welcome, User!" styleClass="sidebar-user">
                <font><Font name="System Bold" size="18"/></font>
            </Label>
            <Separator style="-fx-background-color: white;"/>

            <VBox spacing="10.0" alignment="TOP_LEFT">
                <Button text="ðŸ  Dashboard" styleClass="sidebar-button" onAction="#handleDashboardButtonAction"/>
                <Button text="ðŸŽ¯ Goals" styleClass="sidebar-button" onAction="#handleGoalsButtonAction"/>
                <Button text="ðŸ“… Workouts" styleClass="sidebar-button" style="-fx-background-color: #1976D2;"/>
                <Button text="ðŸ“ˆ Progress" styleClass="sidebar-button" onAction="#handleProgressButtonAction"/>
                <Button text="ðŸŽ Food Log" styleClass="sidebar-button" onAction="#handleFoodLogButtonAction"/>
                <Button text="ðŸ‘¤ Profile" styleClass="sidebar-button" onAction="#handleProfileButtonAction"/>
            </VBox>

            <Pane VBox.vgrow="ALWAYS"/>

            <Button text="ðŸšª Logout" styleClass="logout-button" onAction="#handleLogoutButtonAction"/>
        </VBox>
    </left>

    <!-- === MAIN CONTENT AREA === -->
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <!-- Title -->
            <Label fx:id="welcomeLabel" text="My Workouts">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <!-- Tab Pane for Plans and Log -->
            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                <!-- Workout Plans Tab -->
                <Tab text="ðŸ“… Workout Plans">
                    <ScrollPane fitToWidth="true">
                        <VBox spacing="20.0">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>

                            <!-- Plans List and Details -->
                            <HBox spacing="20.0" prefHeight="250.0">
                                <!-- Plans List -->
                                <VBox spacing="10.0" prefWidth="250.0">
                                    <Label text="Your Plans:">
                                        <font>
                                            <Font name="System Bold" size="14.0" />
                                        </font>
                                    </Label>
                                    <ListView fx:id="plansListView" prefHeight="200.0" />
                                </VBox>

                                <!-- Plan Details -->
                                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                    <Label text="Plan Details:">
                                        <font>
                                            <Font name="System Bold" size="14.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="planDetailsArea" editable="false" prefHeight="200.0" wrapText="true" />
                                </VBox>
                            </HBox>

                            <!-- Add Plan Form -->
                            <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
                                <Label text="Create New Workout Plan">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>

                                <!-- Plan Name -->
                                <VBox spacing="5.0">
                                    <Label text="Plan Name:" />
                                    <TextField fx:id="planNameField" promptText="e.g., Full Body Strength" />
                                </VBox>

                                <!-- Description -->
                                <VBox spacing="5.0">
                                    <Label text="Description:" />
                                    <TextArea fx:id="descriptionArea" promptText="Describe your workout plan..." prefHeight="60.0" />
                                </VBox>

                                <HBox spacing="20.0">
                                    <!-- Difficulty -->
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Difficulty:" />
                                        <ComboBox fx:id="difficultyComboBox" prefWidth="200.0" promptText="Select difficulty" />
                                    </VBox>

                                    <!-- Duration -->
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Duration (weeks):" />
                                        <TextField fx:id="durationWeeksField" promptText="e.g., 8" />
                                    </VBox>
                                </HBox>

                                <!-- Message Label -->
                                <Label fx:id="messageLabel" />

                                <!-- Add Plan Button -->
                                <Button text="Add Workout Plan" onAction="#handleAddPlanButtonAction" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </VBox>

                            <!-- Delete Button -->
                            <HBox spacing="10.0" alignment="CENTER">
                                <Button text="Delete Selected Plan" onAction="#handleDeletePlanButtonAction" prefWidth="180.0" style="-fx-background-color: #f44336; -fx-text-fill: white;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </HBox>
                        </VBox>
                    </ScrollPane>
                </Tab>

                <!-- Workout Log Tab -->
                <Tab text="ðŸ’ª Daily Workout Log">
                    <ScrollPane fitToWidth="true">
                        <VBox spacing="20.0">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>

                            <!-- Workout Log Table -->
                            <VBox spacing="10.0">
                                <Label text="Your Workout History:">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="workoutLogTable" prefHeight="250.0">
                                    <columns>
                                        <TableColumn fx:id="workoutNameColumn" text="Exercise" prefWidth="200.0" />
                                        <TableColumn fx:id="setsColumn" text="Sets" prefWidth="80.0" />
                                        <TableColumn fx:id="repsColumn" text="Reps" prefWidth="80.0" />
                                        <TableColumn fx:id="weightColumn" text="Weight (kg)" prefWidth="100.0" />
                                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="120.0" />
                                    </columns>
                                </TableView>
                            </VBox>

                            <!-- Add Workout Form -->
                            <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
                                <Label text="Log Today's Workout">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>

                                <!-- Workout Name -->
                                <VBox spacing="5.0">
                                    <Label text="Exercise Name:" />
                                    <TextField fx:id="workoutNameField" promptText="e.g., Bench Press, Squats" />
                                </VBox>

                                <HBox spacing="20.0">
                                    <!-- Sets -->
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Sets:" />
                                        <TextField fx:id="setsField" promptText="e.g., 3" />
                                    </VBox>

                                    <!-- Reps -->
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Reps:" />
                                        <TextField fx:id="repsField" promptText="e.g., 10" />
                                    </VBox>

                                    <!-- Weight -->
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Weight (kg):" />
                                        <TextField fx:id="weightField" promptText="e.g., 50" />
                                    </VBox>

                                    <!-- Date -->
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Date:" />
                                        <DatePicker fx:id="datePicker" promptText="Select date" />
                                    </VBox>
                                </HBox>

                                <!-- Buttons -->
                                <HBox spacing="10.0">
                                    <Button text="Add Workout" onAction="#handleAddWorkout" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                    <Button text="Clear" onAction="#handleClear" prefWidth="100.0" style="-fx-background-color: #9E9E9E; -fx-text-fill: white;">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                </HBox>
                            </VBox>

                            <!-- Delete Button -->
                            <HBox spacing="10.0" alignment="CENTER">
                                <Button text="Delete Selected Workout" onAction="#handleDeleteWorkout" prefWidth="180.0" style="-fx-background-color: #f44336; -fx-text-fill: white;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </HBox>
                        </VBox>
                    </ScrollPane>
                </Tab>
            </TabPane>

            <!-- Back to Dashboard Button -->
            <HBox spacing="10.0" alignment="CENTER">
                <Button text="Back to Dashboard" onAction="#handleBackButtonAction" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
