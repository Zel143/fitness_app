<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fittrack.controller.WorkoutPlansController">
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>
   
   <!-- Title -->
   <Label fx:id="welcomeLabel" text="My Workout Plans">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   
   <!-- Main Content: Plans List and Details -->
   <HBox spacing="20.0" prefHeight="250.0">
      <!-- Plans List -->
      <VBox spacing="10.0" prefWidth="250.0">
         <Label text="Your Plans:">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Label>
         <ListView fx:id="plansListView" prefHeight="200.0" />
      </VBox>
      
      <!-- Plan Details -->
      <VBox spacing="10.0" HBox.hgrow="ALWAYS">
         <Label text="Plan Details:">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Label>
         <TextArea fx:id="planDetailsArea" editable="false" prefHeight="200.0" wrapText="true" />
      </VBox>
   </HBox>
   
   <!-- Add Plan Form -->
   <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
      <Label text="Create New Workout Plan">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <!-- Plan Name -->
      <VBox spacing="5.0">
         <Label text="Plan Name:" />
         <TextField fx:id="planNameField" promptText="e.g., Full Body Strength" />
      </VBox>
      
      <!-- Description -->
      <VBox spacing="5.0">
         <Label text="Description:" />
         <TextArea fx:id="descriptionArea" promptText="Describe your workout plan..." prefHeight="60.0" />
      </VBox>
      
      <HBox spacing="20.0">
         <!-- Difficulty -->
         <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Difficulty:" />
            <ComboBox fx:id="difficultyComboBox" prefWidth="200.0" promptText="Select difficulty" />
         </VBox>
         
         <!-- Duration -->
         <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Duration (weeks):" />
            <TextField fx:id="durationWeeksField" promptText="e.g., 8" />
         </VBox>
      </HBox>
      
      <!-- Message Label -->
      <Label fx:id="messageLabel" />
      
      <!-- Add Plan Button -->
      <Button text="Add Workout Plan" onAction="#handleAddPlanButtonAction" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </VBox>
   
   <!-- Action Buttons -->
   <HBox spacing="10.0" alignment="CENTER">
      <Button text="Delete Selected Plan" onAction="#handleDeletePlanButtonAction" prefWidth="180.0" style="-fx-background-color: #f44336; -fx-text-fill: white;">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      
      <Button text="Back to Dashboard" onAction="#handleBackButtonAction" prefWidth="150.0">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </HBox>
</VBox>
