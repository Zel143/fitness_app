<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fittrack.controller.DashboardController"
            prefWidth="1000.0" prefHeight="650.0"
            stylesheets="@/com/fittrack/view/styleSheet.css">

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" prefWidth="220.0" spacing="15.0" styleClass="sidebar">
            <Label fx:id="userLabel" text="Welcome, User!" styleClass="sidebar-user"/>
            <Separator/>
            <VBox spacing="10.0">
                <Button text="ðŸŽ¯ My Goals" onAction="#handleGoalsButtonAction" styleClass="sidebar-button"/>
                <Button text="ðŸ“… Schedule" onAction="#handleWorkoutPlansButtonAction" styleClass="sidebar-button"/>
                <Button text="ðŸ“ˆ Progress" onAction="#handleProgressButtonAction" styleClass="sidebar-button"/>
                <Button text="ðŸŽ Food Log" onAction="#handleFoodLogButtonAction" styleClass="sidebar-button"/>
            </VBox>
            <Pane VBox.vgrow="ALWAYS"/>
            <Button text="ðŸšª Logout" onAction="#handleLogoutButtonAction" styleClass="logout-button"/>
        </VBox>
    </left>

    <!-- Top Bar -->
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT" styleClass="topbar">
            <Label fx:id="motivationLabel"
                   text="Let's crush your fitness goals today!"
                   styleClass="topbar-text"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <AnchorPane>
            <VBox alignment="TOP_CENTER" spacing="25.0"
                  AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10"
                  AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
                <Label text="Dashboard Overview" styleClass="title"/>
                <VBox spacing="10.0" styleClass="card">
                    <Label fx:id="statsTitleLabel" text="User's Current Progress So Far" styleClass="subtitle"/>
                    <LineChart fx:id="progressChart" animated="true" legendVisible="true"
                               prefHeight="300.0" title="Progress Over Time">
                        <xAxis><CategoryAxis fx:id="xAxis" label="Date"/></xAxis>
                        <yAxis><NumberAxis fx:id="yAxis" label="Value"/></yAxis>
                    </LineChart>
                </VBox>
                <VBox spacing="10.0" styleClass="card">
                    <Label text="Your Stats Summary" styleClass="subtitle"/>
                    <Label fx:id="statsLabel" text="No stats available"/>
                </VBox>
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>
