<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fittrack.controller.DashboardController">
   
   <!-- Top Bar -->
   <top>
      <VBox style="-fx-background-color: #2196F3; -fx-padding: 20;">
         <Label fx:id="userLabel" text="Welcome!" textFill="WHITE">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         <Label fx:id="motivationLabel" text="Let's crush your fitness goals today!" textFill="WHITE">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
      </VBox>
   </top>
   
   <!-- Center Content -->
   <center>
      <VBox spacing="20.0" alignment="CENTER">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         
         <!-- Stats Section -->
         <VBox spacing="10.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Your Stats">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="statsLabel" text="No stats available" />
         </VBox>
         
         <!-- Navigation Buttons -->
         <VBox spacing="15.0" alignment="CENTER">
            <Label text="Quick Actions">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            
            <Button text="My Profile" onAction="#handleProfileButtonAction" prefWidth="250.0" prefHeight="40.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            
            <Button text="Set Goals" onAction="#handleGoalsButtonAction" prefWidth="250.0" prefHeight="40.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            
            <Button text="Workout Plans" onAction="#handleWorkoutPlansButtonAction" prefWidth="250.0" prefHeight="40.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            
            <Button text="Track Progress" onAction="#handleProgressButtonAction" prefWidth="250.0" prefHeight="40.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            
            <Button text="Logout" onAction="#handleLogoutButtonAction" prefWidth="250.0" prefHeight="40.0" style="-fx-background-color: #f44336; -fx-text-fill: white;">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </VBox>
      </VBox>
   </center>
   
</BorderPane>
