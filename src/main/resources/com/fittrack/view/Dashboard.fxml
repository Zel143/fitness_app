<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fittrack.controller.DashboardController"
            prefWidth="1000.0" prefHeight="650.0"
            stylesheets="@styleSheet.css">

    <!-- Sidebar (User info + Quick Actions) -->
    <left>
        <VBox prefWidth="220.0" spacing="15.0"
              style="-fx-background-color: #1E88E5; -fx-padding: 25;">
            <Label fx:id="userLabel" text="Welcome, User!" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>

            <Separator style="-fx-background-color: white;"/>

            <VBox spacing="10.0">
                <Button text="ðŸ‘¤ My Profile" onAction="#handleProfileButtonAction"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"/>
                <Button text="ðŸŽ¯ My Goals" onAction="#handleGoalsButtonAction"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"/>
                <Button text="ðŸ“… Schedule" onAction="#handleWorkoutPlansButtonAction"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"/>
                <Button text="ðŸ“ˆ Progress" onAction="#handleProgressButtonAction"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"/>
                <Button text="ðŸŽ Food Log" onAction="#handleFoodLogButtonAction"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"/>
            </VBox>

            <Pane VBox.vgrow="ALWAYS"/>

            <Button text="ðŸšª Logout" onAction="#handleLogoutButtonAction"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;"/>
        </VBox>
    </left>

    <!-- Top Bar -->
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT"
              style="-fx-background-color: #1976D2; -fx-padding: 15;">
            <Label fx:id="motivationLabel"
                   text="Let's crush your fitness goals today!"
                   textFill="WHITE" style="-fx-font-size: 16px;">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" 
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox alignment="TOP_CENTER" spacing="25.0">
                <padding>
                    <Insets top="20" left="20" right="20" bottom="20"/>
                </padding>

                <!-- Stats Header -->
                <Label text="Dashboard Overview" style="-fx-text-fill: #212121;">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>

                <!-- Commented-Out Progress Indicators -->
                <!--
                <HBox alignment="CENTER" spacing="20.0">
                    <VBox alignment="CENTER" spacing="5.0"
                          style="-fx-background-color: #E3F2FD; -fx-padding: 20; -fx-background-radius: 10;">
                        <Label text="Exercises"/>
                        <ProgressIndicator progress="0.5" prefWidth="80" prefHeight="80"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="5.0"
                          style="-fx-background-color: #FFEBEE; -fx-padding: 20; -fx-background-radius: 10;">
                        <Label text="Meals"/>
                        <ProgressIndicator progress="0.7" prefWidth="80" prefHeight="80"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="5.0"
                          style="-fx-background-color: #E8F5E9; -fx-padding: 20; -fx-background-radius: 10;">
                        <Label text="Sleep"/>
                        <ProgressIndicator progress="0.8" prefWidth="80" prefHeight="80"/>
                    </VBox>
                </HBox>
                -->

                <!-- Summary / Stats Area -->
                <VBox spacing="10.0"
                      style="-fx-background-color: #E3F2FD; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #2196F3; -fx-border-width: 2; -fx-border-radius: 10;">
                    <Label text="ðŸ“Š My Current Stats" style="-fx-text-fill: #212121;">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <ScrollPane fitToWidth="true" prefHeight="250.0" 
                                style="-fx-background-color: transparent; -fx-background: transparent;">
                        <Label fx:id="statsLabel" text="No stats available" 
                               wrapText="true" 
                               style="-fx-font-size: 14px; -fx-line-spacing: 2px; -fx-text-fill: #333333; -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>
                    </ScrollPane>
                </VBox>

                <!-- Today's Workout Exercises -->
                <VBox spacing="10.0"
                      style="-fx-background-color: #FFF3E0; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #FF9800; -fx-border-width: 2; -fx-border-radius: 10;">
                    <Label text="ðŸ’ª Current Workouts" style="-fx-text-fill: #212121;">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <TableView fx:id="todayWorkoutTable" prefHeight="250.0" minHeight="150.0" maxHeight="400.0"
                               style="-fx-text-fill: black; -fx-background-color: white; -fx-border-color: #2196F3; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="exerciseColumn" text="Exercise" prefWidth="200.0" style="-fx-text-fill: black;"/>
                            <TableColumn fx:id="setsColumn" text="Sets" prefWidth="100.0" style="-fx-text-fill: black;"/>
                            <TableColumn fx:id="repsColumn" text="Reps" prefWidth="100.0" style="-fx-text-fill: black;"/>
                            <TableColumn fx:id="weightColumn" text="Weight (kg)" prefWidth="120.0" style="-fx-text-fill: black;"/>
                        </columns>
                        <placeholder>
                            <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20;">
                                <Label text="ðŸ“‹ No Workout Scheduled" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #666666;"/>
                                <Label text="Create a workout plan in the Workout Plans section!" style="-fx-text-fill: #999999;"/>
                            </VBox>
                        </placeholder>
                    </TableView>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
