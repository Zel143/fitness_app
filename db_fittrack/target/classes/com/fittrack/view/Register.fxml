<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fittrack.controller.RegisterController">
   <padding>
      <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
   </padding>
   
   <!-- Title -->
   <Label text="Create Your FitTrack Account" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   
   <!-- Error/Success Message Label -->
   <Label fx:id="messageLabel" wrapText="true" />
   
   <!-- Username Field -->
   <Label text="Username:" />
   <TextField fx:id="usernameField" promptText="Choose a username" />
   
   <!-- Email Field -->
   <Label text="Email:" />
   <TextField fx:id="emailField" promptText="Enter your email address" />
   
   <!-- Password Field -->
   <Label text="Password:" />
   <PasswordField fx:id="passwordField" promptText="Choose a password (min 6 characters)" />
   
   <!-- Confirm Password Field -->
   <Label text="Confirm Password:" />
   <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" />
   
   <!-- Register Button -->
   <Button fx:id="registerButton" onAction="#handleRegisterButtonAction" text="Create Account" maxWidth="Infinity" styleClass="primary-button">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Button>
   
   <!-- Back to Login Link -->
   <HBox alignment="CENTER" spacing="5.0">
      <Label text="Already have an account?" />
      <Button fx:id="loginLink" onAction="#handleLoginLinkAction" text="Login here" styleClass="link-button" />
   </HBox>
   
</VBox>
